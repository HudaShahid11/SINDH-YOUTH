                    android:background="@color/white"
                    android:layout_margin="5dp"
                    android:paddingTop="10dp"
                    android:id="@+id/cisco_iot_and_data_analytics"/>
                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
