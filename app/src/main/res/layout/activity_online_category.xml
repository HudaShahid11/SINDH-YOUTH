    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".online_course"
    android:orientation="vertical"
    android:background="@color/white1">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimaryDark">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Course Category"
            android:textSize="20sp"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:textColor="@color/white1"/>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/sindh_board_of_technical_education"
                    android:scaleType="fitXY"
                    android:background="@color/white1"
                    android:layout_gravity="center"
                    android:padding="5dp"/>


            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Courses: 61"
                android:textSize="15sp"
                android:fontFamily="@font/lato_bold"
                android:gravity="left"
                android:textColor="@color/colorPrimaryDark"
                android:padding="5dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"/>


            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:columnCount="3"
                android:rowCount="5"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                tools:targetApi="ice_cream_sandwich">


                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="Information Technology"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="12dp"
                    android:drawableTop="@drawable/ic_tech"
                    android:background="@color/white"
                    android:layout_margin="5dp"
                    android:paddingTop="10dp"
                    android:id="@+id/tech"/>
                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="Hotel and Tourism"
                    android:textSize="12dp"
                    android:drawableTop="@drawable/ic_airplane"
                    android:background="@color/white"
                    android:layout_margin="5dp"
                    android:paddingTop="10dp"
                    android:id="@+id/tour"/>
